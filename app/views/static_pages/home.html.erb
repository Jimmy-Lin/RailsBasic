<% provide(:title, "Home") %>

<% if is_logged_in? %>
	<section class="user_info">
		<%= render 'shared/user_info' %>
	</section>
	<section class="stats">
		<%= render 'shared/stats' %>
	</section>
	<section class="micropost form">
		<%= render 'shared/micropost_form', micropost: Micropost.new %>
	</section>
	<%= render 'shared/feed' %>
<% else %>

	<h1>Sample App</h1>
	<p>
		This is the home page for the 
		<a href="http://www.railstutorial.org/">Ruby on Rails Turoial</a> 
		sample application.
	</p>

	<%= link_to("Sign up now!", signup_path, class: "button") %> 

<% end %>